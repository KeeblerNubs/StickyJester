# Discord bot token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Firebase Realtime Database URL
FIREBASE_DATABASE_URL=https://your-project-id.firebaseio.com

# Optional: path to your Firebase service account JSON inside the container
# Leave empty to use Google Application Default Credentials
FIREBASE_CREDENTIALS=/app/firebase-service-account.json

# Optional: host path for docker compose to mount the service account file
# (Only used by docker-compose.yml; adjust if your JSON lives elsewhere)
FIREBASE_CREDENTIALS_PATH=./firebase-service-account.json
